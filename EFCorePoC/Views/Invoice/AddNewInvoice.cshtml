@model EFCorePoC.ViewModels.AddNewInvoiceViewModel

@{
    ViewData["Title"] = "Create new invoice";
}



<h2>On this page we wil look at adding new invoices</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewInvoice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="invoiceDTO.InvoiceDate" class="control-label"></label>
                <input asp-for="invoiceDTO.InvoiceDate" class="form-control" />
                <span asp-validation-for="invoiceDTO.InvoiceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="invoiceDTO.CustomerReference" class="control-label"></label>
                <input asp-for="invoiceDTO.CustomerReference" asp-items="Model.customerList" class="form-control" />
                <span asp-validation-for="invoiceDTO.CustomerReference" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="customerId" class="control-label"></label>
                <select asp-for="customerId" asp-items="Model.customerList" class="form-control"></select>
                <span asp-validation-for="customerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productId" class="control-label"></label>
                <select asp-for="productId" asp-items="Model.productList" class="form-control"></select>
                <span asp-validation-for="productId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="invoiceDTO.NumberOfItems" class="control-label"></label>
                <input asp-for="invoiceDTO.NumberOfItems" class="form-control" />
                <span asp-validation-for="invoiceDTO.NumberOfItems" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>