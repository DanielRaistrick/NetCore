@model EFCorePoC.ViewModels.AddNewProductViewModel

@{
    ViewData["Title"] = "AddNewProduct";
}

<h2>AddNewProduct</h2>

<h2>On this page we wil look at adding a new product</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="productDTO.Name" class="control-label"></label>
                <input asp-for="productDTO.Name" class="form-control" />
                <span asp-validation-for="productDTO.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.UnitPrice" class="control-label"></label>
                <input asp-for="productDTO.UnitPrice" class="form-control" />
                <span asp-validation-for="productDTO.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productDTO.QuantityInStock" class="control-label"></label>
                <input asp-for="productDTO.QuantityInStock" class="form-control" />
                <span asp-validation-for="productDTO.QuantityInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

